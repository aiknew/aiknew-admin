{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./src",
  "monorepo": true,
  "root": "./",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.build.json",
    "builder": "swc",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../../../shared/api/locales/**/*",
        "watchAssets": true,
        "outDir": "./dist/locales"
      },
      {
        "include": "../public/**/*",
        "watchAssets": true,
        "outDir": "./dist/public"
      },
      {
        "include": "../views/**/*",
        "watchAssets": true,
        "outDir": "./dist/views"
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "builder": "tsc",
          "introspectComments": true
        }
      }
    ]
  },
  "projects": {
    "admin-api": {
      "type": "application",
      "root": ".",
      "entryFile": "main",
      "sourceRoot": "./src",
      "compilerOptions": {
        "tsConfigPath": "./tsconfig.build.json"
      }
    }
  }
}
