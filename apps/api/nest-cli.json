{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "compilerOptions": {
    "builder": "tsc",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../locales/**/*",
        "watchAssets": true,
        "outDir": "./dist/locales"
      },
      {
        "include": "../public/**/*",
        "watchAssets": true,
        "outDir": "./dist/public"
      },
      {
        "include": "../views/**/*",
        "watchAssets": true,
        "outDir": "./dist/views"
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true
        }
      }
    ]
  }
}
