{
  "name": "@aiknew/shared-admin-db",
  "version": "0.0.2",
  "peerDependencies": {
    "@dotenvx/dotenvx": "catalog:common",
    "@nestjs/common": "catalog:api",
    "@nestjs/config": "catalog:api",
    "@prisma/client": "6.9.0",
    "@redis/client": "catalog:api",
    "dayjs": "catalog:common",
    "redis": "catalog:api"
  },
  "devDependencies": {
    "@aiknew/shared-ts-config": "workspace:*",
    "@types/node": "catalog:common",
    "postgres": "^3.4.7",
    "prisma": "catalog:api",
    "tsx": "catalog:common"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "tsx ./prisma/seeds/index.ts"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./enums": {
      "import": "./dist/generated/prisma/enums.js",
      "default": "./dist/generated/prisma/enums.js",
      "types": "./dist/generated/prisma/enums.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "pnpm tsc --watch",
    "build": "pnpm tsc",
    "db:seed": "dotenvx run -f .env -f ../../../../apps/admin-api/.env -- pnpm prisma db seed",
    "db:push": "dotenvx run -f .env -f ../../../../apps/admin-api/.env -- pnpm prisma db push",
    "db:studio": "dotenvx run -f .env -f ../../../../apps/admin-api/.env -- pnpm prisma studio",
    "db:generate": "dotenvx run -f .env -f ../../../../apps/admin-api/.env -- pnpm prisma generate",
    "db:reset": "dotenvx run -f .env -f ../../../../apps/admin-api/.env -- pnpm prisma migrate reset"
  }
}
