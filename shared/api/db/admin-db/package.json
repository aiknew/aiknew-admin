{
  "name": "@aiknew/shared-admin-db",
  "version": "0.0.2",
  "dependencies": {
    "@dotenvx/dotenvx": "catalog:common",
    "@aiknew/shared-api-dtos": "workspace:*",
    "@aiknew/shared-api-utils": "workspace:*",
    "@nestjs/common": "catalog:api",
    "@nestjs/config": "catalog:api",
    "@prisma/client": "6.9.0",
    "@redis/client": "catalog:api",
    "dayjs": "catalog:common",
    "redis": "catalog:api"
  },
  "devDependencies": {
    "typescript": "catalog:common",
    "@aiknew/shared-ts-config": "workspace:*",
    "@types/node": "catalog:common",
    "postgres": "^3.4.7",
    "prisma": "catalog:api",
    "tsx": "catalog:common"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "tsx ./prisma/seeds/index.ts"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "default": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime.js",
      "default": "./dist/runtime.js",
      "types": "./dist/runtime.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm tsc",
    "db:reset": "dotenvx run -f .env -f ../../../../apps/admin-api/.env -- pnpm prisma migrate reset"
  }
}
