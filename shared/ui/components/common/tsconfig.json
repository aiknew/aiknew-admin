{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noEmit": false,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"]
  },
  "include": ["src/**/*", "src/**/*.vue"]
}
